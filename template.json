  "provisioners": [
    {   "type": "file",
        "source": "{{pwd}}",
        "destination": "/tmp"

    },
    {
        "type": "shell",
        "inline": ["sudo bash /tmp/dtk-node-agent/install_agent.sh"]
    }
  ]
